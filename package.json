{
  "private": true,
  "name": "remix-nested-layouts",
  "description": "",
  "license": "",
  "scripts": {
    "watch:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css -w",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css -m",
    "remix:run": "remix run",
    "predev": "touch ./app/styles/app.css",
    "dev": "npm-run-all --parallel watch:css remix:run",
    "build": "npm run build:css && remix build",
    "start": "vercel dev"
  },
  "dependencies": {
    "@remix-run/node": "^0.17.5",
    "@remix-run/react": "^0.17.5",
    "@remix-run/serve": "^0.17.5",
    "@remix-run/vercel": "^0.17.5",
    "@vercel/node": "^1.11.0",
    "clsx": "^1.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.17.5",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.1.2",
    "vercel": "^23.0.1"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
